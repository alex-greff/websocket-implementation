{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
    },
    "strictNullChecks": true,
    "target": "ES2017",
  },
  "include": [
    "src/**/*"
  ],
}
